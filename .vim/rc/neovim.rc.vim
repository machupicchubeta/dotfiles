" Python provider
let g:python_host_prog = '$HOME/.pyenv/shims/python2'
let g:python3_host_prog = '$HOME/.pyenv/shims/python3'

tnoremap   <ESC>      <C-\><C-n>
tnoremap   jj         <C-\><C-n>
tnoremap   j<Space>   j

nnoremap <Leader>t    :<C-u>terminal<CR>
nnoremap !            :<C-u>terminal<Space>
