export PATH=$PWD/bin:$PATH

alias rs='rails server'
alias rc='rails console'
alias rr='rails runner'
alias unicorn_daemon='bundle exec unicorn_rails --port 3000 -D'
alias unicorn='bundle exec unicorn_rails --port 3000'
alias all_test='spring stop && RAILS_ENV=test rk db:reset db:migrate db:seed spec'
alias feature_test='spring stop && RAILS_ENV=test rk db:reset db:migrate db:seed spec:features'
alias test='spring stop && RAILS_ENV=test rk db:reset db:migrate db:seed spec:controllers spec:decorators spec:helpers spec:lib spec:models'
alias retest='rspec --only-failures'
alias next_failure='rspec --next-failure'

